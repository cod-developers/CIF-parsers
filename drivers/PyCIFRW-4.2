#!/bin/bash

TMP_DIR="${TMPDIR}"
BASENAME="$(basename $0)"

test -z "${TMP_DIR}" && TMP_DIR="."
TMP_FILE="${TMP_DIR}/tmp-${BASENAME}-$$"

export PYTHONPATH=~/src/PyCifRW-4.2/build/lib.linux-i686-2.7/CifFile

pycifrw-parse "$@" > ${TMP_FILE} 2>&1

if grep -q ^StarFile.StarError ${TMP_FILE}
then
    echo ERROR
else
    test -s ${TMP_FILE} && echo WARNING
fi

rm "${TMP_FILE}"
